@model Sistema_de_Ventas.Models.tbCategoria

<div class="modal fade" id="confirm-Insert-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-Insert-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-Insert-modal-label">Insertar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label>Categoria Nombre</label>
                        <div class="col-md-10">
                            <input type="text" name="categoriaDescripcion" id="txtCat" class="form-control" placeholder="Ingrese el nombre de la categoria" required /> <br />
                            <label style="color:red" id="VCat">Este campo es requerido</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <input type="button" value="Create" class="btn btn-primary" onclick="enviarCRear()" />
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                @*<a href="#" id="btn-confirm-Insert" class="btn btn-danger" onclick="DeleteModal()">Eliminar</a>*@
            </div>
        </div>
    </div>
</div>

<script>
    $("#VCat").hide();
   
</script>


<script>
    function enviarCRear() {
        var categoriaDescripcion = $("#txtCat").val();
        console.log(categoriaDescripcion)
        if (categoriaDescripcion != "" ) {
            $.ajax({
                url: "/Categorias/Create1",
                method: "POST",
                data: { categoriaDescripcion: categoriaDescripcion },
                success: function (data) {

                    $("#confirm-Insert-modal").show();
                    location.reload();
                }
            });
           

        } else {
           
            $("#VCat").show();
        }
    }
</script>
