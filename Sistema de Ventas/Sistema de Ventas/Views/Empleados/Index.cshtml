@model IEnumerable<Sistema_de_Ventas.Models.tbEmpleados>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped" id="tabla">
    <thead style="background-color:black; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.empleadoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleadoApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleadoSexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleadoDireccionExacta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleadoTelefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleadoCorreoElectronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleadoFechaNacimiento)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.empleadoFechaContratacion)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.empleadoFechaCreacion)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.empleadoFechaModificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleadoEstado)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.tbCargos.cargoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbEstadosCiviles.estadoCivilNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbMunicipios.municipioNombre)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.tbUsuarios.usuarioUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbUsuarios1.usuarioUsuario)
            </th>*@
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoSexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoDireccionExacta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoTelefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoCorreoElectronico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoFechaNacimiento)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.empleadoFechaContratacion)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.empleadoFechaCreacion)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.empleadoFechaModificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empleadoEstado)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.tbCargos.cargoNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbEstadosCiviles.estadoCivilNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbMunicipios.municipioNombre)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.tbUsuarios.usuarioUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbUsuarios1.usuarioUsuario)
                </td>*@
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.empleadoId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.empleadoId }, new { @class = "btn btn-primary" })
                    @*@Html.ActionLink("Borrar", "Delete", new { id = item.empleadoId }, new { @class = "btn btn-danger" })*@
                    <button class="btn-delete btn btn-danger" data-id=@item.empleadoId>Eliminar</button>
                </td>
            </tr>
        </tbody>
    }

</table>

<script src="~/content/dist/plugins/jquery/jquery.min.js"></script>
<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-delete-modal-label">Confirmar eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar este Empleado?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a href="#" id="btn-confirm-delete" class="btn btn-danger" onclick="DeleteModal()">Eliminar</a>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function DeleteModal() {
        $('#confirm-delete-modal').modal({ backdrop: 'static', keyboard: false })
    }
</script>

<script>
    $(function () {
        $('.btn-delete').click(function () {
            var id = $(this).data('id');
            $('#btn-confirm-delete').attr('href', '/Empleados/Delete/' + id);
            $('#confirm-delete-modal').modal({ backdrop: 'static', keyboard: false });
        });
    });
</script>

<script src="~/content/dist/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tabla").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.2/i18n/es-MX.json'
            }
        });
    });
</script>