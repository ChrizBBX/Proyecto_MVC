            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ municipioId: municipioId }),
            success: function (data) {
                console.log(data);

                $("#municipioId1").html("<option value='0'> Seleccione una opcion </opcion>");
                $.each(data, function (i, value) {
                    $("#municipioId1").html("<option value ='" + value.municipioId + "' >" + value.municipioNombre + "</option>")
                })

            }
        })

    })
</script>