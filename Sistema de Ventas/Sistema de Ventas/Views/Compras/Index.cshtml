@model IEnumerable<Sistema_de_Ventas.Models.tbCompras>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Compras</h2>

<p>
    <a href="/Compras/Create" class="btn btn-primary">Nueva Compra</a>
</p>

<table class="table" id="tabla">
    <thead style="background-color: black; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.compraFecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbProveedores.proveedorNombre)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.compraFecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbProveedores.proveedorNombre)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Edit", new { id = item.compraId }, new { @class = "btn btn-success" })
                @*<button class="btn-delete btn btn-danger" data-id="@item.compraId">Eliminar</button>*@
            </td>
        </tr>
    }
</table> 


<script src="~/content/dist/plugins/jquery/jquery.min.js"></script>

<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-delete-modal-label">Confirmar eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar este elemento?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a href="#" id="btn-confirm-delete" class="btn btn-danger" onclick="DeleteModal()">Eliminar</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#tabla").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.2/i18n/es-MX.json'
            }
        });
    });
</script>