
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RecuperarContrasena</title>

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/dist/css/stylelogin.css">
</head>
<body>
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-wrap p-4 p-md-5" style="height: 500px">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Iniciar Sesion</h3>
                        <form action="@Url.Action("CambioContrasena","Login")" method="post" class="login-form">
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Usuario" name="txtusuario" required>
                            </div>
                            <div class="form-group d-flex">
                                <input type="password" class="form-control rounded-left" placeholder="Nueva Contraseña" name="txtpassword" required>
                            </div>
                            <label style="color:red">@Html.ValidationMessage("Validador")</label>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Cambiar Contraseña</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>



</body>
</html>
<script src="~/Content/dist/js/jquerylogin.min.js"></script>
<script src="~/Content/dist/js/popper.min.js"></script>
<script src="~/Content/dist/js/bootstraplogin.min.js"></script>
<script src="~/Content/dist/js/mainlogin.js"></script>