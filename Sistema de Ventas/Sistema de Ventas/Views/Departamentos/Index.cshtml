@model IEnumerable<Sistema_de_Ventas.Models.tbDepartamentos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-md-center">INICIO</h2>

<p>
    @*<button class="btn btn-primary" id="btn-Insert" onclick="InsertarModal()">Nuevo</button>*@
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped" id="tabla">
    <thead style="background-color:black; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.departamentoNombre)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.departamentoFechaCreacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.departamentoFechaModificacion)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.departamentoEstado)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.tbUsuarios.usuarioUsuario)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.tbUsuarios1.usuarioUsuario)
                </th>*@
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.departamentoNombre)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.departamentoFechaCreacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.departamentoFechaModificacion)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.departamentoEstado)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.tbUsuarios.usuarioUsuario)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.tbUsuarios1.usuarioUsuario)
                    </td>*@
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.departamentoId }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.departamentoId }, new { @class = "btn btn-default" }) |
                    @*@Html.ActionLink("Borrar", "Delete", new { id = item.departamentoId }, new { @class = "btn btn-danger" })*@
                    <button class="btn-delete btn btn-danger" data-id=@item.departamentoId>Eliminar</button>
                </td>
            </tr>
        </tbody>
    }
</table>
<script src="~/content/dist/plugins/jquery/jquery.min.js"></script>
<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-delete-modal-label">Confirmar eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar este Departamento?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a href="#" id="btn-confirm-delete" class="btn btn-danger" onclick="DeleteModal()">Eliminar</a>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function DeleteModal() {
        $('#confirm-delete-modal').modal({ backdrop: 'static', keyboard: false })
    }
</script>

<script>
    $(function () {
        $('.btn-delete').click(function () {
            var id = $(this).data('id');
            $('#btn-confirm-delete').attr('href', '/Departamentos/Delete/' + id);
            $('#confirm-delete-modal').modal({ backdrop: 'static', keyboard: false });
        });
    });
</script>

<script src="~/content/dist/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tabla").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.2/i18n/es-MX.json'
            }
        });
    });
</script>
